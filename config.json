{
    "name": "SIA2MQTT4HA",
    "version": "0.1.3",
    "slug": "sia2mqtt_ha",
    "description": "Service that acts as an alarm receiving centre for Honeywell Flex alarm panels",
    "arch": [
        "armhf",
        "armv7",
        "aarch64",
        "amd64",
        "i386"
    ],
    "startup": "application",
    "boot": "auto",
    "ports": {
        "10002/tcp": 10002
    },
    "ports_description": {
        "10002/tcp": "SIA Receiver port as set in alarm panel"
    },
    "options": {
        "mqtt": {
            "brokerUrl": "mqtt://ha.home.djb.org.uk",
            "discoverTopic": "homeassistant",
            "baseTopic": "sia2mqtt4ha",
            "username": "mqtt",
            "password": "mqtt"
        },
        "sia": {
            "port": 10002
        },
        "zones": {
            "1001": {
                "name": "front_door",
                "handler": "door"
            },
            "1002": {
                "name": "hall_pir",
                "handler": "pir"
            }
        }
    },
    "schema": {
        "mqtt": {
            "brokerUrl": "str",
            "discoveryTopic": "str",
            "baseTopic": "str",
            "username": "str",
            "password": "str"
        },
        "sia": {
            "port": "int"
        }
    }
}